{

    "exclude": [
        "dist",
        "node_modules",
        "public"
    ],
    "typeRoots": [
        "../node_modules/@types"
    ],
    "compilerOptions": {
        "noImplicitAny": false,
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "removeComments": true,
        "allowJs": true,
        "outDir": "dist",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    }
}